bg-color = #1E1E1E
fg-color = #FF7C74
html, head, body, div
    padding 0
    margin 0
    border 0
    font-family 'Arial', sans-serif // placeholder
    //overflow-x hidden
    color #aaa
    user-select none
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
a
    color #aaa
    &:visited
        color #aaa
    
.background
    position fixed
    width 100vw
    height 100vh
    background-size cover
    background-repeat none 
    background-attachment center
    //filter hue-rotate(180deg)
    background-color bg-color
    background-image url(resources/bg-raster.png)
    top 0
    left 0
    z-index -1
    box-shadow 0 0 5px 0 rgba(0, 0, 0, 0.2) inset
.nav
    position sticky
    top 0
    left 0
    display flex
    flex-direction row
    flex-wrap none
    box-shadow 0 0 10px 1px rgba(0, 0, 0, 0.2)
    background-color bg-color - #050505
    transition .2s background-color

    &.top
        box-shadow none
        background-color rgba(0, 0, 0, 0.0)
    .links
        margin auto
        display flex
        a
            display inline-block
            flex-basis 75px
            padding 15px
            text-align center
            color #aaa
            text-decoration none
            transition 0.2s color, 0.2s text-shadow 
            &:visited
                color #aaa
            &:hover
                color #fff
                text-shadow 2px 2px 5px rgba(0, 0, 0, 0.2)
    .spacer
        flex-grow 2
.content
    width 70vw
    display flex
    flex-direction column
    padding 30px
    background-color bg-color - #050505
    box-shadow 0 2px 3px 1px rgba(0, 0, 0, 0.2)
    margin 50px auto
.projects
    .project
        background-color bg-color - #0a0a0a
        padding 20px
        margin 10px 0

        display flex
        flex-direction column
        transition 0.2s box-shadow
        box-shadow 0 0 2px 0 rgba(0, 0, 0, 0.2)
        h3
            cursor pointer
        &:hover
            box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.2)
        .expandThis
            overflow hidden
            transition 0.2s height
            &.collapsed
                height 0
            .pcontent
                display flex
                flex-direction column
                .text
                    display flex
                    flex-direction column
                    margin 0 0 20px 0
                .languages
                    display block
                    .lang
                        display inline-block
                        img 
                            height 100%
                            filter grayscale(100%), brightness(100%)
                        max-height 1.2rem
                        border-radius 2px
            .links
                a
                    color #aaaaaa
                    background-color bg-color - #111
                    text-decoration none
                    display inline-block
                    padding 10px
                    transition 0.2s box-shadow
                    box-shadow 0 0   2px 0 rgba(0, 0, 0, 0.2)
                    &:hover
                        box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.2)
.contact
    .contact
        background-color bg-color - #0a0a0a
        padding 20px
        margin 10px 0

        display flex
        flex-direction column
        transition 0.2s box-shadow
        box-shadow 0 0 2px 0 rgba(0, 0, 0, 0.2)
        & *
            padding 0
            margin 5px 0
        &:hover
            box-shadow 0 2px 2px 0 rgba(0, 0, 0, 0.2)
.footer
    color #aaa
    background-color bg-color - #050505
    display flex
    padding 10px 0
    #text
        margin auto
        display flex
        flex-direction column
        margin auto
        text-align center
        & *
            padding 0
            margin 0
        .smaller
            margin-top 3px
            font-size 0.7rem
            opacity 0.5
        .even_smaller
            margin-top 3px
            font-size 0.5rem
            opacity 0.2
#top
    position absolute
    top 0